  .cart-plus-minus {
  border: 2px solid;
  height: 45px;
  line-height: 38px;
  width: 140px;
  text-align: center; }

.qtybutton {
  height: 100%;
  width: 30%; }

.dec.qtybutton {
  float: left;
  border-right: 2px solid; }

.inc.qtybutton {
  float: right;
  border-left: 2px solid; }

.cart-plus-minus,
.dec.qtybutton,
.inc.qtybutton {
    cursor:pointer;
  background-color: var(--white);
  border-color: var(--border-color-11);
  font-size: 20px;
  font-weight: 700; }

input.cart-plus-minus-box {
  background: transparent none repeat scroll 0 0;
  -webkit-box-shadow: none;
  box-shadow: none;
  border: none;
  height: 100%;
  margin-bottom: 0;
  padding: 0;
  text-align: center;
  width: 40%;
  font-weight: 700;
  font-family: var(--ltn__heading-font); }
</style>
    <!-- BREADCRUMB AREA START -->
